{
   "manifest_version": 2,
   "name": "FrankenJura.Com Topo Printing",
   "permissions": [ 
        //"tabs", 
        //"contextMenus", 
        //"unlimitedStorage",
        "http://www.frankenjura.com/*", 
        "https://www.frankenjura.com/*"
   ],
   "version": "1.0.0",
   
   "web_accessible_resources": [ 
        //"pages/banner.html", 
        //"pages/banner.css", 
        //"scripts/content/banner.js", 
        "resources/icon_16.png" 
   ],
   
   "description": "Prepares FrankenJura.Com Topo saving and printing",
   "icons": {
      "128": "resources/fjc_icon_128.png",
      "64": "resources/fjc_icon_64.png",
      "48": "resources/fjc_icon_48.png",
      "16": "resources/fjc_icon_16.png"
   },

   "background": {
      "scripts": [ 
        //"scripts/bg/background.js",
        //"scripts/bg/config.js", 
        //"scripts/bg/ui.js"
      ]
   },
   
   "browser_action": {
      "default_icon": "resources/fjc_icon_19_off.png",
      "default_title": "process with FrankenJura.Com Top Printing"
   },
   
   "content_scripts": [ {
      "all_frames": true,
      "js": [ 
        "FJCTP.user.js"
        //"scripts/frameworks/jquery.min.js",
        //"scripts/content/docprocessor.js",
        //"scripts/content/content.js",
        //"scripts/content/util.js"
      ],
      "matches": [ 
        "https://www.frankenjura.com/*", 
        "http://www.frankenjura.com/*"
      ],
      "run_at": "document_start"
   } ]
}
